import { Image } from 'expo-image';
import { router } from 'expo-router';
import React, { useEffect, useRef } from 'react';
import { StyleSheet, TouchableOpacity, View } from 'react-native';

import { ThemedText } from '@/components/ThemedText';
import { ThemedView } from '@/components/ThemedView';

export default function OpeningScreen() {
  const timeoutRef = useRef<ReturnType<typeof setTimeout> | null>(null);

  useEffect(() => {
    timeoutRef.current = setTimeout(() => router.replace('/(tabs)'), 2000);
    return () => {
      if (timeoutRef.current) clearTimeout(timeoutRef.current);
    };
  }, []);

  const enterCafe = () => {
    if (timeoutRef.current) clearTimeout(timeoutRef.current);
    router.replace('/(tabs)');
  };

  return (
    <ThemedView style={styles.container}>
      <View style={styles.hero}>
        <Image source={require('@/assets/images/icon.png')} style={styles.logo} contentFit="contain" />
        <ThemedText type="title">Cafe Shop</ThemedText>
        <ThemedText>Fresh coffee, pastries, and 10% off your first order.</ThemedText>
      </View>
      <TouchableOpacity style={styles.cta} onPress={enterCafe}>
        <ThemedText type="defaultSemiBold">Enter Cafe</ThemedText>
      </TouchableOpacity>
    </ThemedView>
  );
}

const styles = StyleSheet.create({
  container: {
    flex: 1,
    alignItems: 'center',
    justifyContent: 'center',
    paddingHorizontal: 24,
    gap: 24,
    backgroundColor: '#F4E1C1',
  },
  hero: {
    alignItems: 'center',
    gap: 12,
  },
  logo: {
    width: 96,
    height: 96,
    borderRadius: 24,
  },
  cta: {
    paddingHorizontal: 24,
    paddingVertical: 12,
    borderRadius: 12,
    backgroundColor: '#8B4513',
    alignItems: 'center',
  },
});


